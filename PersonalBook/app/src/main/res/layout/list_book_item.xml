<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="@dimen/list_book_item_height"
        android:layout_height="@dimen/list_book_item_height"
        android:padding="@dimen/list_book_item_button_margin"
        >

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_book_tvlayout_padding"
            android:paddingBottom="@dimen/list_book_tvlayout_padding"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvPaymentType"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="吃喝"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:layout_gravity="center_vertical"

                />

            <TextView
                android:id="@+id/tvTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="午饭"
                android:textSize="12sp"
                android:textColor="@color/scendary_text"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥400.0"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="@color/payment_out"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            />

    </RelativeLayout>

</LinearLayout>
