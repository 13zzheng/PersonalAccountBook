<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:text="注册" android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/title_text_size"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_account"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <stu.edu.cn.zing.personalbook.mywidget.LineEditText
                android:id="@+id/et_account"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transport"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="@dimen/edittext_text_size"
                android:singleLine="true"
                android:hint="用户名"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_password"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <stu.edu.cn.zing.personalbook.mywidget.LineEditText
                android:id="@+id/et_password"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/edittext_text_size"
                android:background="@color/transport"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="密码"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_password_confirmation"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <stu.edu.cn.zing.personalbook.mywidget.LineEditText
                android:id="@+id/et_password_confirmation"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/edittext_text_size"
                android:background="@color/transport"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="确认密码"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_username"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <stu.edu.cn.zing.personalbook.mywidget.LineEditText
                android:id="@+id/et_username"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/edittext_text_size"
                android:background="@color/transport"
                android:singleLine="true"
                android:hint="用户昵称"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_regist"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/edittext_text_size"
            android:clickable="false"
            android:layout_gravity="right"/>

    </LinearLayout>
</RelativeLayout>
