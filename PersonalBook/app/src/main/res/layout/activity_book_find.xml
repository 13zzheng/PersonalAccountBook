<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="stu.edu.cn.zing.personalbook.BookFindActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/statisical_analysis_color">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账单查询"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_finder"
        android:layout_below="@id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/primary_text_size"
            android:text="2017年11月13日-2017年11月15日"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/gray"
            />
        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:text="价格"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/primary_text_size"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/primary_text_size"
                android:text="类别"/>
            <View
                android:layout_width="@dimen/divider_width"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
                />
            <TextView
                android:id="@+id/tv_member"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/primary_text_size"
                android:text="成员"/>
            <View
                android:layout_width="@dimen/divider_width"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/tv_trading_way"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/primary_text_size"
                android:text="支付方式"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/gray"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/edittext_height"
            android:text="重置"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/btn_finder_reset"

            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btn_find"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/edittext_height"
            android:text="查询"
            android:background="@drawable/btn_finder_find"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"/>

    </LinearLayout>


    <ListView
        android:id="@+id/lv_find_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_button"
        android:layout_below="@id/ll_finder"
        android:dividerHeight="1px">

    </ListView>

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_button"
        android:layout_below="@id/ll_finder"
        android:text="暂无账单数据"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="@dimen/primary_text_size"
        android:textColor="@color/primary_text"/>

</RelativeLayout>
